{{!
        @template totara_competency/competency_summary_linkedcourses

        The template for displaying the linkedcourses section in the competency summary

        Classes required for JS:
        * none

        Data attributes required for JS:
        * none

        Context variables required for this template:
        * courses: array of objects, linked courses detail
        * courses -> fullname: string, course name
        * courses -> url: string, encoded course url

}}

<div class="tw-compSummary__linkedCourses">
    {{^courses}}
    <div class="tw-compSummary__linkedCourses_row">
        {{#str}}nocourseslinkedyet, totara_competency{{/str}}
    </div>
    {{/courses}}

    {{#courses}}
    <div class="tw-compSummary__linkedCourses_row">
        <div class="tw-compSummary__linkedCourses_label">
            <a href="{{{url}}}">{{fullname}}</a>
        </div>
        <div class="tw-compSummary__linkedCourses_value">
            {{linktype}}
        </div>
    </div>
    {{/courses}}
</div>
