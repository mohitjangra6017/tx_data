{{!

    @template pathway_criteria_group/partial_criteria_type_select

    This template generates the body for the criteria_type modal select

    Classes required for JS:
    * none

    Data attributes required for JS:

    Context variables required for this template:

    Other context variables for following partials:

    Strings:
}}

<div class="cc_selectTree__option cc_hidden" data-criteria-type-toggle="{{criteria_type_level}}">
    <ul role="tree" class="cc_selectTree__list_flat">
        {{#criteria_types}}
            <li role="none" class="cc-selectTree__list_item">
                <div class="cc-selectTree__list_item_row {{#disabled}}cc_hidden{{/disabled}}"
                     {{#singleuse}}data-criteria-type-singleuse-active{{/singleuse}}>
                    <span class="cc-selectTree__list_row_icon">
                        <span class="cc-selectTree__list_row_icon_none"></span>
                    </span>
                    <a role="treeitem"
                       href="#"
                       class="tw-selectTree__list_row_link"
                       data-{{criteria_type_level}}-criterion-type="{{type}}"
                       data-{{criteria_type_level}}-criterion-title="{{title}}"
                       data-{{criteria_type_level}}-criterion-templatename="{{criterion_templatename}}"
                       data-{{criteria_type_level}}-criterion-singleuse="{{singleuse}}"
                    >
                        {{title}}
                    </a>
                </div>

                {{#singleuse}}
                <div class="{{^disabled}}cc_hidden{{/disabled}}" data-criteria-type-singleuse-disabled>
                    <span class="cc-selectTree__list_row_icon">
                        <span class="cc-selectTree__list_row_icon_none"></span>
                    </span>
                    {{title}}
                </div>
                {{/singleuse}}
            </li>
        {{/criteria_types}}
    </ul>
</div>
