{{!

        @template totara_competency/partial_actions

        This template generates the action buttons

        Classes required for JS:
        * none

        Data attributes required for JS:
        * data-pw-action

        Context variables required for this template:

        Other context variables for following partials:

        Strings:
}}

<div class="cc_actions cc_inline_element" data-cc-on-ordering="hide">
    <a href="#"
       class="cc_action_remove {{#deleted}}cc_hidden{{/deleted}}"
       data-action="remove">
        <span class="pw_item__btn_small_icon">
            {{#flex_icon}}trash{{/flex_icon}}
        </span>
    </a>

    <a href="#"
       class="cc_action_undo {{^deleted}}cc_hidden{{/deleted}}"
       data-action="undo">
        <span class="pw_item__btn_small_icon">
            {{#flex_icon}}undo{{/flex_icon}}
        </span>
    </a>
</div>
