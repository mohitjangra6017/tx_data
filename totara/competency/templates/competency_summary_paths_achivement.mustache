{{!

    @template totara_competency/competency_summary_paths_achivement

    Generic template for displaying the achievement path items

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title: String, Title of the achievement
    * criterion_aggregation: String, aggregation description
    * items: array of values
    * items -> name: string, value
}}

<section class="tw-compSummary__achievement">
    <div class="tw-compSummary__achievement_header">
        <h4 class="tw-compSummary__achievement_header_title">
            {{title}}
        </h4>

        {{#aggregation}}
        <div class="tw-compSummary__achievement_header_aggregation">
            ({{aggregation}})
        </div>
        {{/aggregation}}
    </div>

    {{#items}}
    <div class="tw-compSummary__achievement_row">
        {{name}}
    </div>
    {{/items}}
</section>