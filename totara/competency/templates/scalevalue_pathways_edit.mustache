{{!

        @template totara_competency/scalevalue_pathways
        This template shows grouped detail for single-value pathways

        Classes required for JS:
        * none

        Data attributes required for JS:
        * data-scalevalue-id
        * data-scalevalue-action

        Context variables required for this template:
        * scalevalues
        **  id
        **  name
        **  pathways
        **  proficient

        Other context variables for following partials:

        Strings:
        * single_value_paths, totara_competency
        * single_value_proficient_mark_help, totara_competency
}}

<div class="scalevalue_pathways cc_solid_border" data-cc-orderable="scalevalues">
    <div class="scalevalue_pathways_title">
        <div class="cc_detail_label cc_hidden"
             data-cc-on-ordering="show">
            <span class="cc_label cc_allupper">{{#str}}single_value_paths, totara_competency{{/str}}</span>
        </div>

        <div class="cc_helptext cc_inline_element"
             data-cc-on-ordering="hide">
            <span class="legend">
                {{#str}}single_value_proficient_mark_help, totara_competency{{/str}}
                {{#flex_icon}}check-circle-o-success{{/flex_icon}}
            </span>
        </div>

        <div class="cc_actions cc_inline_element cc_hidden"
             data-cc-on-ordering="show">
            <span class="pw_item__btn_small_icon">
                {{#flex_icon}}arrows{{/flex_icon}}
            </span>
        </div>
    </div>

    <div class="scalevalue_pathways_scalevalues"
         data-cc-on-ordering="hide">
        {{#scale_values}}
            <div class="scalevalue_pathways_scale"
                 data-scalevalue-id="{{id}}">

                <div class="scalevalue_pathways_scale_title {{^pathways}}empty_paths{{/pathways}}">
                    <div class="cc_inline_element">
                        {{#proficient}}
                            <span class="btn_normal_icon">{{#flex_icon}}check-circle-o-success{{/flex_icon}}</span>
                        {{/proficient}}
                        <span class="cc_allupper">{{name}}</span>
                    </div>
                    <div class="cc_actions cc_inline_element">
                        <a href="#"
                           data-scalevalue-action="add-pw">
                            <span class="btn_large_icon">
                                {{#flex_icon}}plus-square-o{{/flex_icon}}
                            </span>
                        </a>
                        {{> totara_competency/partial_criteria_type_select}}
                    </div>
                </div>

                <div data-cc-scalevalue-pw-list="{{num_pathways}}">
                    {{#pathways}}
                        {{> totara_competency/partial_pathway}}
                    {{/pathways}}
                </div>
            </div>
        {{/scale_values}}
    </div>
</div>

