{{!

    @template totara_competency/overall_aggregation

    This template generates the output for pathway aggregation methods

    Classes required for JS:
    * none
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * aggregation
    **  name
    **  checked
    **  description

    Other context variables for following partials:

    Strings:
    * overall_rating_calc, totara_competency

}}

<div class="pw_aggregation {{^has_pathways}}cc_hidden{{/has_pathways}}" data-cc-pw-aggregation="1">
    <div class="cc_smalltitle cc_detail_label">
        <strong>{{#str}}overall_rating_calc, totara_competency{{/str}}</strong>
    </div>

    <div class="cc_detail_value">
        <select name="cc_pw_aggregation_method"
                data-cc-pw-agg-changed
                data-cc-on-ordering="disable">
            {{#aggregation_types}}
                <option value="{{type}}"
                        {{#editfunction}}data-cc-pw-agg-function="{{.}}"{{/editfunction}}
                        {{#selected}}selected="selected"{{/selected}}>
                    {{title}}
                </option>
            {{/aggregation_types}}
        </select>
    </div>

    <div class="cc_inline_element {{^overall_aggregation_function}}cc_hidden{{/overall_aggregation_function}}" data-cc-pw-agg-actions>
        <button class="cc_agg_action" data-cc-agg-action="edit" disabled="disabled">
            <span class="pw_item__btn_small_icon">
                {{#flex_icon}}edit{{/flex_icon}}
            </span>
        </button>
        <button data-cc-agg-action="move">
            <span class="pw_item__btn_small_icon">
                {{#flex_icon}}arrows{{/flex_icon}}
            </span>
        </button>
    </div>
</div>
