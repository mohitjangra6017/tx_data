{{!

    @template pathway_criteria_group/partial_criterion

    This template shows a criterion

    Classes required for JS:
    * none

    Data attributes required for JS:

    Context variables required for this template:

    Other context variables for following partials:

}}

<div class="critgrp_criteria_none {{#criteria}}cc_hidden{{/criteria}}">
    {{#str}}nocriteria, pathway_criteria_group{{/str}}
</div>

{{#criteria}}
    <div class="criterion"
         data-tw-criterion-type="{{type}}"
         data-tw-criterion-key="{{key}}"
         {{#id}}data-tw-criterion-id="{{.}}"{{/id}}>

        <div data-criterion-detail class="cc_inline_element">
            {{> pathway_criteria_group/partial_criterion_detail}}
        </div>

        <div class="cc_actions cc_inline_element"
             data-cc-on-ordering="hide">
            <a href="#" data-criterion-action="remove"
               {{#deleted}}class="cc_hidden"{{/deleted}}>
                <span class="pw_item__btn_small_icon">
                    {{#flex_icon}}trash{{/flex_icon}}
                </span>
            </a>

            <a href="#" data-criterion-action="undo"
               {{^canundo}} class="cc_hidden" {{/canundo}}>
                <span class="pw_item__btn_small_icon">
                    {{#flex_icon}}undo{{/flex_icon}}
                </span>
            </a>
        </div>
    </div>
{{/criteria}}
