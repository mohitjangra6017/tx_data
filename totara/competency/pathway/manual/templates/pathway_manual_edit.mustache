{{!

    @template pathway_manual/pathway_manual

    This template displays and manages a Manual Pathway's configuration

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Other context variables for following partials:

    Example context (json):
        {
        }
}}

<div class="pw_manual"
     data-core-autoinitialise="true"
     data-core-autoinitialise-amd="pathway_manual/manual"
     data-pw-save-endpoint="pathway_manual_update"
     data-pw-save-req-sortorder="1">

    <div class="pw_manual_detail">
        <div class="cc_detail_label" data-pw-on-delete="mark">
            <span class="cc_label cc_allupper">{{title}}</span>
        </div>
        <div class="cc_detail_value">
            <div class="pw_roles">
                {{#roles}}
                    {{> totara_competency/partial_item}}
                {{/roles}}
            </div>

            <div class="pw_manual_raters" data-pw-on-delete="hide">
                <a href="#" data-pw-manual-action="addraters" data-cc-on-ordering="hide">
                    <span class="pw_item__btn_small_icon">
                        {{#str}}add_raters, pathway_manual{{/str}}
                    </span>
                </a>
                <span class="pw_manual_error_noraters cc_warning {{^noraters}}cc_hidden{{/noraters}}">
                    {{#flex_icon}}notification-warning{{/flex_icon}}
                    {{#str}}error_no_raters, pathway_manual{{/str}}
                </span>
            </div>
        </div>
    </div>
</div>
