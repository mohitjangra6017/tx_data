{{!

    @template assquestion_editor/element_editor
    Shamelessly appropriated from @template totara_form/element_editor_atto

    Context variables required for this template:
    * form_item_template string this template, used for dynamic partials
    * name__xxxx bool true where xxxx is the name of this form item
    * name string name of this item
    * id string id of this item
    * label string
    * frozen bool
    * text string
    * format string
    * drafitemid
    * required bool
    * rows int
    * cols int
    * fptemplates string json
    * requiredstrings string json
    * jsmodules string json
    * yuimodules string json

    Other context variables for following partials:
    * totara_form/help_button
    * totara_form/validation_errors
}}
{{#frozen}}
    <div class="tf_element_input">
        {{^rvalue}}
            {{#str}}noanswer, assquestion_editor{{/str}}
        {{/rvalue}}
        <div>{{{ rvalue }}}&nbsp;</div>
    </div>
{{/frozen}}
{{^frozen}}
    <div class="tf_element_input">
        {{> totara_form/validation_errors}}
        <div>
        <textarea id="{{id}}" {{#frozen}}disabled data-{{/frozen}}name="{{name}}[text]" rows="{{rows}}" cols="{{cols}}" spellcheck="true"
                  data-fptemplates="{{fptemplates}}" data-requiredstrings="{{requiredstrings}}" data-jsmodules="{{jsmodules}}" data-yuimodules="{{yuimodules}}"
                  {{#required}}required{{/required}}>{{rvalue}}</textarea>
        </div>
        <input type="hidden" {{#frozen}}data-{{/frozen}}name="{{name}}[format]" value="{{format}}" />
        <input type="hidden" {{#frozen}}data-{{/frozen}}name="{{name}}[itemid]" value="{{itemid}}" />
    </div>
{{/frozen}}
