{{!

    @template mod_facetoface/seminarevent_filterbar

    This template generates a filter bar for seminar events and sessions.

    Context variables required for this template:
    * method: get or post
    * formid: string id of the form
    * params: array containing key/value pairs as input elements of type hidden
    * params.name: name attribute
    * params.value: value attribute
    * filters: array containing filters
    * filters.name: key of the query string
    * filters.class: part of the css class name
    * filters.label: label text attached to the select menu
    * filters.webkit_init_value: must be filters.options.value whose selected is true
    * filters.options: array containing options for the select menu
    * filters.options.name: label text
    * filters.options.value: value attribute
    * filters.options.selected: true if the option is selected

    Example content (json):
    {
        "method" : "get",
        "formid" : "id-123456",
        "params" : [
            {
                "name" : "id",
                "value" : "3"
            },
            {
                "name" : "f",
                "value" : "5"
            }
        ],
        "filters" : [
            {
                "name" : "roomid",
                "class" : "room",
                "label" : "Filter by rooms:",
                "webkit_init_value" : "4",
                "options" : [
                    {
                        "name" : "All rooms",
                        "value" : "0",
                        "selected" : false
                    },
                    {
                        "name" : "New auditorium",
                        "value" : "4",
                        "selected" : true
                    },
                    {
                        "name" : "Training room east",
                        "value" : "3",
                        "selected" : false
                    }
                ]
            },
            {
                "name" : "eventtime",
                "class" : "eventtime",
                "label" : "Event time:",
                "webkit_init_value" : "1",
                "options" : [
                    {
                        "name" : "All events",
                        "value" : "0",
                        "selected" : false
                    },
                    {
                        "name" : "Past events",
                        "value" : "3",
                        "selected" : false
                    },
                    {
                        "name" : "Events in progress",
                        "value" : "2",
                        "selected" : false
                    },
                    {
                        "name" : "Upcoming events",
                        "value" : "1",
                        "selected" : true
                    }
                ]
            }
        ]
    }
}}

<form method="{{method}}" class="mod_facetoface__filter" id="mod_facetoface__filter_{{formid}}" data-core-autoinitialise-amd="mod_facetoface/seminarevent_filterbar" data-core-autoinitialise="true">
    {{#params}}
        <input type="hidden" name="{{name}}" value="{{value}}">
    {{/params}}
    {{#filters}}
        {{^disabled}}
            <div class="mod_facetoface__filter__item">
                <label for="mod_facetoface__filter_{{formid}}__{{name}}" class="mod_facetoface__filter__item__label">{{{label}}}</label>
                <select id="mod_facetoface__filter_{{formid}}__{{name}}" name="{{name}}" disabled class="mod_facetoface__filter__item__{{class}}-select" data-webkit-init-value="{{webkit_init_value}}">
                    {{#options}}
                        <option value="{{value}}"{{#selected}} selected{{/selected}}>{{name}}</option>
                    {{/options}}
                </select>
            </div>
        {{/disabled}}
    {{/filters}}
</form>
