{{!

    @template mod_facetoface/facilitator_details

    This template generates the facilitator details.

    Context variables required for this template:

    Example content (json):
    {
        "namestr" : "Facilitator Name",
        "namevalue" : "Facilitator 1",
        "customfields" : [
            {
                "field" : "Professor",
                "value" : "Yes"
            }
        ],
        "allowconflictstr" : "Allow booking conflicts",
        "allowconflictvalue" : "No",
        "isdescription" : false,
        "descriptionstr" : "Description",
        "descriptionvalue" : "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit<\/p>",
        "createdstr" : "Created",
        "createdvalue" : "Wednesday, 14 August 2019, 10:49 AM by <a href=\"http:\/\/totara130.io\/user\/view.php?id=2\">Admin User<\/a>",
        "modifiedstr" : "Modified",
        "modifiedvalue" : "Wednesday, 14 August 2019, 11:20 AM by <a href=\"http:\/\/totara130.io\/user\/view.php?id=2\">Admin User<\/a>"
    }
}}

<dl>
    <dt>{{namestr}}</dt>
    <dd>{{{namevalue}}}</dd>
    {{#customfields}}
        <dt>{{field}}</dt>
        <dd>{{{value}}}</dd>
    {{/customfields}}
    <dt>{{allowconflictstr}}</dt>
    <dd>{{allowconflictvalue}}</dd>
    {{^isdescription}}
        <dt>{{descriptionstr}}</dt>
        <dd>{{{descriptionvalue}}}</dd>
    {{/isdescription}}
    <dt>{{createdstr}}</dt>
    <dd>{{{createdvalue}}}</dd>
    <dt>{{modifiedstr}}</dt>
    <dd>{{{modifiedvalue}}}</dd>
</dl>